<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean class="cap.curso.concierto.instrumentos.Tambor"
		id="tambor">

		<property name="sonido" value="bpom, pom, pom en xml"></property>
	</bean>
	<bean class="cap.curso.concierto.instrumentos.Trompeta"
		id="trompeta">

		<property name="sonido" value="ctu, tu, tu en xml"></property>
	</bean>
	<bean class="cap.curso.concierto.instrumentos.Guitarra"
		id="guitarra">

		<property name="sonido" value="atran, tran, tran en xml"></property>
	</bean>
	<bean class="cap.curso.concierto.musicos.Solista" id="solista">

		<property name="instrumento" ref="tambor"></property>
	</bean>
	<bean class="cap.curso.concierto.musicos.HombreOrquesta"
		id="Federico">

		<property name="instrumentos">
			<set>
				<ref bean="trompeta" />
				<ref bean="guitarra" />
				<ref bean="tambor" />
			</set>
		</property>
	</bean>

</beans>
